<div class="container text-center">
  <h1>Our team</h1>
  <ul class="list-inline text-center">
    <% ["seb", "anne", "romain"].each do |member| %>
      <li>
        <% link_to "flats/#{member}.html" do %>
          <h2><%= member.capitalize %></h2>
          <%= image_tag "#{member}.jpg", class: "img-circle avatar-xl", alt: "#{member}'s avatar" %>
        <% end %>
      </li>
    <% end %>
  </ul>
  <h3 class="padded">
    <% link_to "#" do %>
      <i class="fa fa-envelope" aria-hidden="true"></i> contact@airbnb.com
    <% end %>
  </h3>
</div>
